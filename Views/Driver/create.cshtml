
@{
    ViewBag.Title = "create";
}


<div class="d-flex justify-content-center mt-5">

    <form action="" method="post">
        <h2>Create your Account</h2>
        Full Name:<input type="text" name="driver_name" value="@ViewBag.driver_name" class="form-control" />
        @Html.ValidationMessage("driver_name", new { @class = "text-danger" })<br />
        Password:<input type="password" name="password" class="form-control" />
        @Html.ValidationMessage("password", new { @class = "text-danger" })<br />
        Email:<input type="email" name="email" class="form-control" />
        @Html.ValidationMessage("email", new { @class = "text-danger" })<br />
        Date of birth:<input type="date" name="dob" class="form-control" />
        @Html.ValidationMessage("dob", new { @class = "text-danger" })<br />
        Phone:<input type="text" name="phone" class="form-control" />
        @Html.ValidationMessage("phone", new { @class = "text-danger" })<br />
        License Number:<input type="text" name="license_no" class="form-control" />
        @Html.ValidationMessage("license_no", new { @class = "text-danger" })<br />
        Nid Number:<input type="text" name="driver_nid" class="form-control" />
        @Html.ValidationMessage("driver_nid", new { @class = "text-danger" })<br />
        Vechile Number:<input type="text" name="vechile_no" class="form-control" />
        @Html.ValidationMessage("vechile_no", new { @class = "text-danger" })<br />
        Vechile type:<input type="text" name="vechile_type" class="form-control" />
        @Html.ValidationMessage("vechile_type", new { @class = "text-danger" })<br />
        Address:<input type="text" name="address" class="form-control" />
        @Html.ValidationMessage("address", new { @class = "text-danger" })<br />

        <input type="submit" name="submit" value="Signup" class="btn btn-primary" />
    </form>
</div>