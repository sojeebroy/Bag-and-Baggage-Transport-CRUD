
@{
    ViewBag.Title = "ChangePassword";
}

<div class="d-flex justify-content-center mt-5">

    <form action="" method="post">
        <h2>Request to change your password</h2>

        Current Password:<input type="password" name="password" class="form-control" />
        @Html.ValidationMessage("password", new { @class = "text-danger" })<br />
        New Password:<input type="password" name="NewPassword" class="form-control" />
        @Html.ValidationMessage("NewPassword", new { @class = "text-danger" })<br />
        Confirm Password:<input type="password" name="ConfirmPassword" class="form-control" />
        @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })<br />

        <h3 class="text-danger">@TempData["msg"]</h3>
        <input type="submit" name="request" value="Request" class="btn btn-primary" />
    </form>
</div>

